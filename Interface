    private void ADICIONARActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        Fretamento f = new Fretamento();
        FretamentoDAO fDao = new FretamentoDAO();
        if (txtData.getText().trim().isEmpty()
                || txtOrigem.getText().trim().isEmpty()
                || txtDestino.getText().trim().isEmpty()
                || txtToneladaCarregada.getText().trim().isEmpty()
                || txtValorTonelada.getText().trim().isEmpty()) {  //Verificação para da tabale para verifacar se ela esta com campos vazios.

            JOptionPane.showMessageDialog(null, "Preencha todas as linhas.");

        } else {

            try {

                f.setData(txtData.getText());
                f.setOrigem(txtOrigem.getText());
                f.setDestino(txtDestino.getText());
                f.setToneladaCarregada(Double.parseDouble(txtToneladaCarregada.getText().replace(",", ".")));
                f.setValorTonelada(Double.parseDouble(txtValorTonelada.getText().replace(",", ".")));

                // Salva no banco
                fDao.SaveCreate(f);

                // Limpa os campos após a inserção
                txtData.setText("");
                txtOrigem.setText("");
                txtDestino.setText("");
                txtToneladaCarregada.setText("");
                txtValorTonelada.setText("");

                buscarJTable(); // Atualiza a tabela

            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, "Erro ao adicionar o registro! Verifique os dados inseridos.");
                e.printStackTrace(); // Exibe o erro no console para depuração
            }

        }
        double somaValor = Double.parseDouble(txtToneladaCarregada.getText().replace(",", ".")) * Double.parseDouble(txtValorTonelada.getText().replace(",", "."));
        resultadoValor.setText(String.format("%.2f", somaValor));

    }                                         

        
    
    
    
    private void JPopmenu01ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          

    private void MODIFCARActionPerformed(java.awt.event.ActionEvent evt) {                                         

        if (JTableFrete.getSelectedRow() != -1) {

            try {
                Fretamento f = new Fretamento();
                FretamentoDAO fdao = new FretamentoDAO();

                f.setData(txtData.getText());
                f.setOrigem(txtOrigem.getText());
                f.setDestino(txtDestino.getText());
                f.setToneladaCarregada(Double.parseDouble(txtToneladaCarregada.getText().replace(",", ".")));
                f.setValorTonelada(Double.parseDouble(txtValorTonelada.getText().replace(",", ".")));
                f.setId((int) JTableFrete.getValueAt(JTableFrete.getSelectedRow(), 0));
                fdao.update(f);

            } catch (ParseException ex) {
                System.out.println(ex);
            }

        }


    }                                        

    private void MODIFCARMouseReleased(java.awt.event.MouseEvent evt) {                                       

        // Atualiza os valores na JTable
        JTableFrete.setValueAt(txtData.getText(), JTableFrete.getSelectedRow(), 1);
        JTableFrete.setValueAt(txtOrigem.getText(), JTableFrete.getSelectedRow(), 2);
        JTableFrete.setValueAt(txtDestino.getText(), JTableFrete.getSelectedRow(), 3);
        JTableFrete.setValueAt(txtValorTonelada.getText(), JTableFrete.getSelectedRow(), 4);
        JTableFrete.setValueAt(txtToneladaCarregada.getText(), JTableFrete.getSelectedRow(), 5);

        // Exibir uma mensagem de sucesso
        JOptionPane.showMessageDialog(null, "Registro atualizado na tabela!");


    }                                      

    private void txtValorToneladaActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:
    }                                                

    private void EXCLUIRActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        if (JTableFrete.getSelectedRow() != -1) {

            Fretamento f = new Fretamento();
            FretamentoDAO fdao = new FretamentoDAO();

            f.setId((int) JTableFrete.getValueAt(JTableFrete.getSelectedRow(), 0));
            fdao.delete(f);
            txtData.setText("");
            txtOrigem.setText("");
            txtDestino.setText("");
            txtValorTonelada.setText("");
            txtToneladaCarregada.setText("");
            buscarJTable();

        } else {
            JOptionPane.showMessageDialog(null, " Selecione para excluir");
        }

    }                                       

    private void txtDestinoActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          

    private void txtToneladaCarregadaActionPerformed(java.awt.event.ActionEvent evt) {                                                     
        // TODO add your handling code here:
    }                                                    

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
    }                                        

    private void txtDataActionPerformed(java.awt.event.ActionEvent evt) {                                        

    }                                       

    private void JTableFreteMouseReleased(java.awt.event.MouseEvent evt) {                                          
        if (JTableFrete.getSelectedRow() != -1) {

            txtData.setText(JTableFrete.getValueAt(JTableFrete.getSelectedRow(), 1).toString());
            txtOrigem.setText(JTableFrete.getValueAt(JTableFrete.getSelectedRow(), 2).toString());
            txtDestino.setText(JTableFrete.getValueAt(JTableFrete.getSelectedRow(), 3).toString());
            txtToneladaCarregada.setText(JTableFrete.getValueAt(JTableFrete.getSelectedRow(), 4).toString());
            txtValorTonelada.setText(JTableFrete.getValueAt(JTableFrete.getSelectedRow(), 5).toString());

        }
    }                                         

