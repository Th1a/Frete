    public TelaCalculo() {
        initComponents();

        DefaultTableModel dtm = (DefaultTableModel) JTableFrete.getModel(); //Cria o modelo da tabela
        JTableFrete.setRowSorter(new TableRowSorter(dtm));   //     Disposição dos dados na tabela     
        buscarJTable();

    }

    public final void buscarJTable() {

        DefaultTableModel dtm = (DefaultTableModel) JTableFrete.getModel();
        dtm.setNumRows(0);
        FretamentoDAO fdao = new FretamentoDAO();

        for (Fretamento f : fdao.buscar()) { // loop 
            dtm.addRow(new Object[]{
                f.getId(),
                f.getData(),
                f.getOrigem(),
                f.getDestino(),
                f.getValorTonelada(),
                f.getToneladaCarregada()
            });

        }

    }

    public final void buscarJTableForOrigem(String origem) {

        DefaultTableModel dtm = (DefaultTableModel) JTableFrete.getModel();
        dtm.setNumRows(0);
        FretamentoDAO fdao = new FretamentoDAO();

        for (Fretamento f : fdao.buscarOrigem(origem)) {
            dtm.addRow(new Object[]{
                f.getId(),
                f.getData(),
                f.getOrigem(),
                f.getDestino(),
                f.getValorTonelada(),
                f.getToneladaCarregada()
            });

        }

    }

    public final void buscarJTableDestino(String destino) {

        DefaultTableModel dtm = (DefaultTableModel) JTableFrete.getModel();
        dtm.setNumRows(0);
        FretamentoDAO fdao = new FretamentoDAO();

        for (Fretamento f : fdao.buscarDestino(destino)) {
            dtm.addRow(new Object[]{
                f.getId(),
                f.getData(),
                f.getOrigem(),
                f.getDestino(),
                f.getValorTonelada(),
                f.getToneladaCarregada()
            });

        }

    }

